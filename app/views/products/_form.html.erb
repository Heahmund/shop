<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "") %>
           ошибки, невозможно добавить товар:</h2>
      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :Название %>
    <%= form.text_field :title, id: :product_title %>
  </div>
  <div class="field">
    <%= form.label :Описание %>
    <%= form.text_area :description, id: :product_description, rows: 10, cols: 60 %>
  </div>
  <div class="field">
    <%= form.label :Изображение %>
    <%= form.text_field :image_url, id: :product_image_url %>
  </div>
  <div class="field">
    <%= form.label :Цена %>
    <%= form.text_field :price, id: :product_price %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>